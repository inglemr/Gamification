<%= form_for(@tag, :class =>"form-horizontal" , :url => path) do |f| %>
  <div class="page-panel panel col-md-12 ">
      <div class="row"><h2 class="text-center"><%= page_type %> Tag</h2></div>
      <hr>
      <div class="col-md-12">
        <div class="col-md-12 form-group">
          <%= f.label :name ,:class => "col-md-3 control-label"%>
          <div class="col-md-7">
            <%= f.text_field :name, autofocus: true ,:value => @tag.name , :class => "form-control"%>
          </div>
        </div>

      </div>

  </div>
  <div class="form-group col-md-12 col-md-offset-5">
    <%= f.submit "Save" , :class => "col-md-2 btn btn-primary"%>
  </div>
<% end %>


