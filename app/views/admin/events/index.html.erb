<div class= "row">
	<div class="page-heading-bar">
		<ol class="breadcrumb">
			<li >Admin</li>
	  	<li class="active">All Events</li>
		</ol>
	</div>
</div>
<div class="text-right">
<%= link_to('<i data-toggle="tooltip" data-placement="bottom" title="New" class="fa fa-plus-square fa-2x"></i>'.html_safe, {:action => 'new'}) %>
</div>
<div class="table-responsive">
<table summary "Events List" id="events_table" class="table table-hover table-bordered bootstrap-datatable datatable" data-source="<%= admin_events_path(format: "json") %>">
		<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Description</th>
			<th>Location</th>
			<th>Point Value</th>
			<th>Day/Time</th>
			<th>Actions</th>
		</tr>
		</thead>
		<tbody>
	</tbody>
</table>
</div>
<%= javascript_tag do %>


  $('#events_table').DataTable({
    sPaginationType: "full_numbers",
    bProcessing: true,
    bServerSide: true,
    sDom: "<'row'<'col-lg-5 col-md-5'l><'col-lg-6 col-md-6'f><'col-lg-1 col-md-1'>><'row'<'col-lg-12'r>>t<'row'<'col-lg-12 col-md-12'i><'col-lg-3 col-md-3 col-centered'p>>",
    sAjaxSource: $('#events_table').data('source')
});
<% end %>