<div class= "row">
  <div class="page-heading-bar">
    <ol class="breadcrumb">
      <li >Admin</li>
      <li><%= link_to("All Roles", {:action => 'index'}) %></li>
      <li >Edit</li>
      <li class="active"><%= @role.name.capitalize %></li>
    </ol>
  </div>
</div>
  <%= form_for(@role, :class =>"form-horizontal" , :url => admin_role_path) do |f| %>
<div class="page-panel panel col-md-12 ">
    <div class="row"><h2 class="text-center">Edit User</h2></div>
    <hr>
    <div class="col-md-6 verticalLineRight">
      <h3 class="panel">Basic Data</h3>
      <div class="col-md-12 form-group">
        <%= f.label :name ,:class => "col-md-3 control-label"%>
        <div class="col-md-7">
          <%= f.text_field :name, autofocus: true ,:value => @role.name , :class => "form-control"%>
        </div>
      </div>
      <h3 class="panel">Description</h3>
      <div class="col-md-12 form-group">
        <div class="col-md-12 form-group">
            <%= f.text_area :description, autofocus: true ,:value => @role.description , :class => "form-control"%>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <h3 class="panel">Permissions</h3>
      <div class="col-md-12 form-group">
        <%= f.label :permissions ,:class => "col-md-3 control-label"%>
        <div class="col-md-7">
          <% Permission.all.each do |permission|%>
            <%= f.label :permission do %>
              <%= check_box_tag 'role[_permissions][]', permission.id, @role.permissions.where(:id => permission.id).any? %>
              <%= permission.name.capitalize %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>


</div>
<div class="form-group col-md-12 col-md-offset-5">
  <%= f.submit "Save" , :class => "col-md-2 btn btn-primary"%>
</div>

<% end %>
