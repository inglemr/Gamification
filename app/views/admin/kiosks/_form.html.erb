<div class= "row">
  <div class="page-heading-bar">
    <ol class="breadcrumb">
      <li >Admin</li>
      <li >Kiosks</li>
      <li><%= link_to("All Kiosks", {:action => 'index'}) %></li>
      <li ><%= page_type %> Kiosk</li>
      <li class="active"><%= @kiosk.kiosk_name %></li>
    </ol>
  </div>
</div>
  <% if @kiosk.errors.any? %>
    <% @kiosk.errors.full_messages.each do |message| %>
        <% concat(content_tag(:div, message, class: "row col-md-4 col-md-offset-8 flash_msg alert fade in") do %>
         <% concat content_tag(:button, 'x', class: "close", data: { dismiss: 'alert' }) %>
         <% concat message %>
       <% end) %>
    <% end %>
  <% end %>
  <%= form_for(@kiosk, :class =>"form-horizontal", :url => path) do |f| %>
<div class="page-panel panel col-md-12 ">
    <div class="col-md-6 verticalLineRight">
      <h3 class="panel">Basic Data</h3>
      <div class="col-md-12 form-group">
        <%= f.label :kiosk_name ,:class => "col-md-3 control-label"%>
        <div class="col-md-7">
          <%= f.text_field :kiosk_name, autofocus: true ,:value => @kiosk.kiosk_name , :class => "form-control"%>
        </div>
      </div>
      <div class="col-md-12 form-group">
        <%= f.label :password ,:class => "col-md-3 control-label"%>
        <div class="col-md-7">
          <%= f.password_field :password, :class => "form-control"%>
        </div>
      </div>
      <% if page_type == "New" %>
      <div class="col-md-12 form-group">
        <%= f.label :password_confirmation ,:class => "col-md-3 control-label"%>
        <div class="col-md-7">
          <%= f.password_field :password_confirmation, :class => "form-control"%>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <h3 class="panel">Location</h3>
      <div class="col-md-12 form-group">
        <%= f.label :location_id, "Building" ,:class => "col-md-3 control-label"%>
          <div class="col-md-7">
            <%= f.collection_select :location_id, Location.order(:building_name), :id, :building_name, include_blank: true , :value =>  "Blank"  %>
          </div>
       </div>
      <div class="col-md-12 form-group">
        <%= f.label :location_id, "Room" ,:class => "col-md-3 control-label"%>
        <div class="col-md-7">
        <%= f.grouped_collection_select(:room_id, Location.all, :rooms, :building_name, :id, :room_number)%>
        </div>
      </div>
    </div>
</div>
<div class="form-group col-md-12 col-md-offset-5">
  <%= f.submit "Save" , :class => "col-md-2 btn btn-primary"%>
</div>

<% end %>



<% content_for :scripts do %>
<script type="text/javascript">
  <% content_for :inner_scripts do %>

  $(document).ready(function () {


<% if page_type == "Edit" %>
$('#kiosk_room_id').parent().show();
$("#kiosk_location_id").val("<%= @kiosk.location_id %>");
$("#kiosk_location_id").trigger("change");
$("#kiosk_room_id").val("<%= @kiosk.room_id %>");
<% end %>

$('#kiosk_room_id').addClass("form-control");
$('#kiosk_location_id').addClass("form-control");


    });



  <% end %>
  <%= content_for :inner_scripts %>
</script>
<% end %>



