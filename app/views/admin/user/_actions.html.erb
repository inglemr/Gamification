<%= link_to('<i data-toggle="tooltip" data-placement="bottom" title="Show" class="fa fa-search-plus fa-lg"></i>'.html_safe, {:action => 'show', :id => user}, :class  => "btn form-control btn-sm") %>
<%= link_to('<i data-toggle="tooltip" data-placement="bottom" title="Edit" class="fa fa-pencil fa-lg"></i>'.html_safe, {:action => 'edit', :id => user}, :class  => "btn form-control btn-sm") %>
<%= link_to('<i data-toggle="tooltip" data-placement="bottom" title="Delete" class="fa fa-trash fa-lg"></i>'.html_safe, admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, :class  => "btn form-control btn-sm") %>

<%= javascript_tag do %>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
<% end %>
