<%= link_to('<i data-toggle="tooltip" data-placement="bottom" title="Manage" class="fa fa-search-plus fa-lg"></i>'.html_safe, {:controller => "events", :action => 'manage', :id => event}, :class  => "btn form-control btn-sm") %>
<%= link_to('<i data-toggle="tooltip" data-placement="bottom" title="Edit" class="fa fa-pencil fa-lg"></i>'.html_safe, {:controller => "Admin::events",:action => 'edit', :id => event}, :class  => "btn form-control btn-sm") %>
<%= link_to('<i data-toggle="tooltip" data-placement="bottom" title="Delete" class="fa fa-trash fa-lg"></i>'.html_safe, admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, :class  => "btn form-control btn-sm") %>

<%= javascript_tag do %>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
<% end %>
