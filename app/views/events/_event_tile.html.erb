<%= link_to({:controller => 'events',:action => 'show', :id => event.id}) do %>
<div class="col-md-4">
<div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-fullscreenbutton="false">
        <header>
          <h2><%= event.event_name %> - <%= event.day_time.to_formatted_s(:long_ordinal) %></h2>

          <% if (can? :update, event, :context => :admin) %>
          <%= link_to('<i data-toggle="tooltip" data-placement="bottom" title="Show" class="fa fa-pencil fa-sm"></i>'.html_safe, {:controller => 'Admin::Events',:action => 'edit', :id => event.id} ,:class => "btn  btn-sm", :style => "float:right") %>
          <% end %>
        </header>
        <div>
          <div class="widget-body widget-hide-overflow no-padding">
            <div class="row">
              <% if event.image_url.to_s == "" %>
                <img class="event_tile_img" src="http://placehold.it/140x100">
              <% else %>
                <%= image_tag event.image_url(:resized).to_s ,:class => "event_tile_img" %>
              <% end %>
              <%= ActionView::Base.full_sanitizer.sanitize(event.description.html_safe)[0,180] + '...' %>
          </div>
          <p style='margin-bottom:0px'><small><b>Points: </b><i><%= event.point_val %></i></small></p>
          </div>
        </div>
        <!-- end widget div -->
      </div>
      </div> 
<% end %>
 

