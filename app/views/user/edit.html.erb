<div class= "row">
  <div class="page-heading-bar">
    <ol class="breadcrumb">
      <li >Admin</li>
      <li >Users</li>
      <li><%= link_to("All Users", {:action => 'index'}) %></li>
      <li >Edit</li>
      <li class="active"><%= @user.username %></li>
    </ol>
  </div>
</div>

<div class="page-panel panel col-md-12 ">
  <%= form_for(@user, :class =>"form-horizontal") do |f| %>
    <div class="row"><h2 class="text-center">Edit User</h2></div>
    <hr>
    <div class="col-md-6 verticalLineRight">
      <h3 class="panel">Basic Data</h3>
      <div class="col-md-12 form-group">
        <%= f.label :email ,:class => "col-md-3 control-label"%>
        <div class="col-md-7">
          <%= f.email_field :email, autofocus: true ,:value => @user.email , :class => "form-control"%>
        </div>
      </div>
      <div class="col-md-12 form-group">
        <%= f.label :username ,:class => "col-md-3 control-label"%>
        <div class="col-md-7">
          <%= f.text_field :username, autofocus: true ,:value => @user.username , :class => "form-control"%>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <h3 class="panel">Roles</h3>
      <div class="col-md-12 form-group">
        <%= f.label :roles ,:class => "col-md-3 control-label"%>
        <div class="col-md-7">
          <% Role.defined_roles.each do |role|%>
            <%= f.label :role do %>
              <%= check_box_tag 'user[_roles][]', role, @user.has_role?(role) %>
              <%= role %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
</div>
<div class="form-group col-md-12 col-md-offset-5">
  <%= f.submit "Save" , :class => "col-md-2 btn btn-primary"%>
  <%end%>
</div>
