<div class="login_panel col-md-12 col-centered">
  <h1 class="text-center" style="padding-top: 20px; font-size: 40px;">Gamification Kiosk Log In</h1>
    <%=  form_tag kiosk_sessions_path do%>
    <div class="row form-group" style="padding-top: 35px;">
            <div class="col-md-12">
        <%= password_field_tag :password,nil, :placeholder => "GSW ID", :class => "form-control text-center", style: "height: 100px;"%>
        </div>
    </div>
      <div class="row">
        <div class="col-xs-6 no-padding">
          <%= submit_tag "Log In", class: "btn btn-block btn-success", style: "height: 100px;" %>
        </div>
        <div class="col-xs-6 no-padding">
          <button type="button" class="btn btn-block btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo" style="height: 100px;">How To Log In</button>
        </div>
      </div>
    <%end%>
</div>


<div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel" style="font-size:30px;">Log In Instructions</h4>
      </div>
      <div class="modal-body">
        <p style="font-size:20px;">
          To enter your GSW ID, plese swipe your GSW ID with the card reader attached to this kiosk.

          </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<% content_for :scripts do %>
  <script type="text/javascript">
    $( document ).ready(function() {
        setTimeout(function(){
            $('#flash').remove();
        }, 5000);
    })

  </script>
<% end %>

<style>
  .form-control {
    font-size: 35px;
  }
  .btn {
    font-size: 25px;
  }
