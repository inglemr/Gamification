.kiosk_header
{
    margin-top:0px !important;
    margin-bottom: 0px !important;
    padding-top: 0px;
    padding-bottom: 0px;
}
h2{ font-size: 50px;
    padding: 0px;
    margin: 0px;}
input { font-size: 18px; }
 .panel{
        border:none;
 }
