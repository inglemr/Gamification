        $('#signupPin').focus();
        e.preventDefault();
    }
});

$("#emailLogin").keyup(function (e) {
    if (e.keyCode == 13) {
        console.log($(this));
        $('#passwordLogin').focus();
        e.preventDefault();
    }
});

