          <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
            <div class="well no-padding">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name) , :html=> { :id => "login-form", :class => "smart-form client-form"}) do |f| %>
                <header>
                  Sign In
                </header>

                <fieldset>

                  <section>
                    <label class="label">E-mail</label>
                    <label class="input"> <i class="icon-append fa fa-user"></i>
                      <%= f.email_field :email, autofocus: true ,:placeholder => "Email" , :class => ""%>
                      <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter email address/username</b></label>
                  </section>

                  <section>
                    <label class="label">Password</label>
                    <label class="input"> <i class="icon-append fa fa-lock"></i>
                      <%= f.password_field :password, autocomplete: "off" ,:placeholder => "Password"%>
                      <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your password</b> </label>
                    <div class="note">
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                     <%= link_to '<i class="fa fa-question-circle fa-lg"></i> Forgot your password?'.html_safe, new_password_path(resource_name) %>
                    <% end -%>
                     <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
                     <br>
                        <%= link_to '<i class="fa fa-envelope fa-lg"></i> Resend confirmation instructions?'.html_safe, new_user_confirmation_path(resource_name) %>
                      <% end -%>
                      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
                      <br>
                        <%= link_to '<i class="fa fa-key fa-lg"></i> Didn\'t receive unlock instructions?'.html_safe, new_unlock_path(resource_name) %></li>
                      <% end -%>
                    </div>
                  </section>
                  <section>
                    <label class="checkbox">
                      <% if devise_mapping.rememberable? -%>
                        <%= f.check_box :remember_me %>

                      <% end -%>
                      <i></i>Stay signed in</label>
                  </section>
                </fieldset>
                <footer>
                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to '<i class="fa fa-check fa-lg"></i> Sign up'.html_safe, new_registration_path(resource_name), :class=> "btn btn-danger pull-left" %>
                <% end -%>
                <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
                  <i class="fa fa-sign-in fa-lg"></i> Log In
                <% end %>
                </footer>
                <%end%>
