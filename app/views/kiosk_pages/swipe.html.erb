<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="swipe panel-primary">
                <div class="panel-body">
                    <div class="row">
                        <%= form_tag({:controller => 'kiosk_pages',:action => 'new_swipe', :event_id => @event.id}, method: "post") do %>
                            <div class="input-group">
                              <%= password_field_tag "id", "" , :placeholder => "Swipe", :style => "height:100px;font-size: 50px" ,:class => "form-control"%>
                                <span class="input-group-btn">
                                    <%= submit_tag "Submit", :class => "btn btn-success ",:style => "height:100px;"%>
                                </span>
                            </div>
                        <% end %>       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="text-left">
            <div class=" panel-primary">
                <div class="panel-body">
                    <div class="row">
                        <%= link_to '<i class="fa fa-arrow-circle-left fa-lg"></i>Back'.html_safe, {:controller => 'kiosk_pages',:action => 'manage', :event_id => @event.id}, :class => "btn btn-primary btn-lg"%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<style>


input { font-size: 18px; }
 .swipe{

margin-top: 25%;
 }
 .panel{
        border:none;
 }
</style>