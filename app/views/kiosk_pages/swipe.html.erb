<div class="row col-md-12 text-center">
<h2 ><%= @event.event_name %></h2>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="swipe panel-primary">
                <div class="panel-body">
                    <div class="row">
                        <%= form_tag({:controller => 'kiosk_pages',:action => 'new_swipe', :event_id => @event.id}, method: "post") do %>
                            <div class="input-group">
                              <%= password_field_tag "id", "" , :placeholder => "Swipe", :style => "height:100px;font-size: 50px" ,:class => "form-control"%>
                                <span class="input-group-btn">
                                    <%= submit_tag "Submit", :class => "btn btn-success ",:style => "height:100px;", :id => "submit"%>
                                </span>
                            </div>
                        <% end %>       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="text-left col-md-1"><%= link_to '<i class="fa fa-arrow-circle-left fa-lg"></i>Back'.html_safe, {:controller => 'kiosk_pages',:action => 'manage', :event_id => @event.id}, :class => "btn btn-primary btn-md"%></div>




<% content_for :scripts do %>
  <script type="text/javascript">
    $( document ).ready(function() {
        $('#id').keyup(function () {
            if (this.value.length == 9) {
                $('#submit').click();
            }
        });
    })
  </script>
<% end %>


<style>

h2{ font-size: 75px;}
input { font-size: 18px; }
 .panel{
        border:none;
 }
</style>