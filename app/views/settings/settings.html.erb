<div id= "ribbon">
    <ol class="breadcrumb">
      <li><%= link_to(current_user.username + "'s Dashboard", { :controller => 'dashboard' ,:action => 'index'}) %></li>
      <li class="active">Settings</li>
    </ol>
  </div>
  <%= form_for(@user, :class =>"form-horizontal", url: {action: "updatesettings"}, :method => :POST) do |f| %>
<div class="page-panel panel col-md-12 ">
    <div class="row"><h2 class="text-center">Settings</h2></div>
    <hr>
    <div class="col-md-6 verticalLineRight">
      <h3 class="panel">Basic Data</h3>
      <div class="col-md-12 form-group">
        <%= f.label :theme ,:class => "col-md-3 control-label"%>
        <div class="col-md-7">
          <%= select_tag "theme", "<option value='smart-style-0'>Smart</option><option value='smart-style-1'>Dark</option><option value='smart-style-2'>Light</option><option value='smart-style-3'>Google</option><option value='smart-style-4'>Pixel</option><option value='smart-style-5'>Glass(Default)</option><option value='smart-style-6'>Material</option>".html_safe, :value => current_user.theme, :class=> "form-control" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
    </div>
</div>
<div class="form-group col-md-12 col-md-offset-5">
  <%= f.submit "Save" , :class => "col-md-2 btn btn-primary"%>
</div>

<% end %>


<% content_for :scripts do %>
  <script type="text/javascript">
  $("#theme").val("<%= current_user.theme %>");
</script>
<% end %>
